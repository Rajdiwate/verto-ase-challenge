generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  
  items    Item[]
  orders   Order[]
}

model Product {
  id    Int    @id @default(autoincrement())
  img   String
  name  String
  stock Int
  price Int
  
  items Item[]
}

model Item {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  orderId   Int?    // Optional - null for cart items, set for order items
  
  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  order     Order?  @relation(fields: [orderId], references: [id])
}

model Order {
  id     Int         @id @default(autoincrement())
  userId Int
  status OrderStatus @default(PENDING)
  
  user   User        @relation(fields: [userId], references: [id])
  items  Item[]
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}
